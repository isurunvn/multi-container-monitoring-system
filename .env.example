# Velaris Demo Environment Configuration
# Copy this file to .env and modify as needed

# Target timezone for time comparison
TARGET_TIMEZONE=Asia/Colombo

# Web targets to monitor (container:port format)
WEB_TARGETS=web1:80,web2:80

# Expected text in web responses
EXPECT_TEXT=Velaris Demo OK

# Database configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=velaris
DB_USER=velaris
DB_PASSWORD=velaris

# SMTP configuration for alerts
# For testing with MailHog (default):
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=alerts@velaris.local
SMTP_TO=support@velaris.local

# For real Gmail SMTP (uncomment and configure):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_FROM=isurunaveen27@gmail.com
# SMTP_TO=naveenliyanaarachchi27@gmail.com
# SMTP_USER=isurunaveen27@gmail.com
# SMTP_PASSWORD=your-gmail-app-password

# Monitoring configuration
CHECK_INTERVAL_SEC=60
MAX_ALLOWED_DRIFT_SEC=5

# Container timezone setting
TZ=Asia/Colombo
