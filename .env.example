# Multi-Container Monitoring Environment Configuration
# Copy this file to .env and modify as needed
# 
# IMPORTANT: All configuration is now centralized in this .env file
# The docker-compose.yml references these variables using ${VARIABLE_NAME} syntax

# === Timezone Configuration ===
TARGET_TIMEZONE=Asia/Colombo
TZ=Asia/Colombo

# === Web Monitoring Configuration ===
WEB_TARGETS=web1:80,web2:80
EXPECT_TEXT=Multi-Container Monitoring OK
CHECK_INTERVAL_SEC=60
MAX_ALLOWED_DRIFT_SEC=5

# === Database Configuration ===
DB_HOST=db
DB_PORT=5432
DB_NAME=monitoring
DB_USER=monitoruser
DB_PASSWORD=monitorpass

# === PostgreSQL Configuration ===
POSTGRES_DB=monitoring
POSTGRES_USER=monitoruser
POSTGRES_PASSWORD=monitorpass

# === SMTP Configuration ===
# For testing with MailHog (default):
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_FROM=alerts@monitoring.local
SMTP_TO=support@monitoring.local

# For real Gmail SMTP (uncomment and configure):
# SMTP_HOST=smtp.gmail.com
